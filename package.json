{
  "name": "crunch",
  "description": "An anime player that integrates with Crunchyroll, AniList, Masterani",
  "version": "0.0.7-alpha.1",
  "author": "BeeeQueue",
  "dependencies": {
    "@mdi/js": "^2.7.94",
    "@types/electron-debug": "^1.1.0",
    "@types/electron-store": "^1.3.0",
    "@types/electron-util": "^0.2.0",
    "@types/hls.js": "^0.10.1",
    "@types/semver": "^5.5.0",
    "@types/superagent": "^3.8.4",
    "@types/uuid": "^3.4.4",
    "@types/webpack-env": "^1.13.6",
    "apollo-boost": "^0.1.16",
    "electron-debug": "^2.0.0",
    "electron-log": "^2.2.17",
    "electron-store": "^2.0.0",
    "electron-updater": "^3.1.2",
    "electron-util": "^0.9.1",
    "hls.js": "^0.11.0",
    "normalize.css": "^8.0.0",
    "rambda": "^1.2.2",
    "superagent": "^3.8.3",
    "ts-key-enum": "^2.0.0",
    "uuid": "^3.3.2",
    "vue": "^2.5.17",
    "vue-apollo": "^3.0.0-beta.25",
    "vue-class-component": "^6.2.0",
    "vue-property-decorator": "^7.0.0",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.16.0",
    "vuex": "^3.0.1",
    "vuex-typescript": "^3.0.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.3",
    "@vue/cli-plugin-typescript": "^3.0.3",
    "@vue/cli-service": "^3.0.3",
    "apollo": "^1.9.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "electron": "^2.0.9",
    "electron-builder": "19.54.0",
    "graphql-tag": "^2.9.2",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3",
    "vue-cli-plugin-apollo": "^0.16.4",
    "vue-cli-plugin-electron-builder": "^1.0.0-rc.3",
    "vue-svg-loader": "^0.9.0",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.19.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "dist_electron/bundled/background.js",
  "private": true,
  "repository": {
    "type": "github",
    "url": "https://github.com/BeeeQueue/crunch"
  },
  "scripts": {
    "graphql:update-schema": "yarn apollo schema:download --endpoint https://graphql.anilist.co graphql.schema.json",
    "graphql:types": "yarn apollo codegen:generate --addTypename --schema graphql.schema.json --queries src/**/*.graphql --target typescript --globalTypesFile=src/graphql-types.ts .",
    "build": "yarn run build:electron",
    "build:electron": "vue-cli-service build:electron",
    "lint": "vue-cli-service lint",
    "postinstall": "yarn electron-builder install-app-deps",
    "serve": "yarn run serve:electron",
    "serve:electron": "vue-cli-service serve:electron"
  }
}
