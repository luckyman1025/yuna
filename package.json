{
  "name": "crunch",
  "description": "An anime player that integrates with Crunchyroll, AniList, Masterani",
  "version": "0.0.8",
  "author": "BeeeQueue",
  "dependencies": {
    "@mdi/js": "^3.0.39",
    "@types/electron-debug": "^1.1.0",
    "@types/electron-store": "^1.3.0",
    "@types/electron-util": "^0.2.0",
    "@types/hls.js": "^0.10.2",
    "@types/semver": "^5.5.0",
    "@types/superagent": "^3.8.4",
    "@types/uuid": "^3.4.4",
    "@types/webpack-env": "^1.13.6",
    "apollo-boost": "^0.1.18",
    "electron-debug": "^2.0.0",
    "electron-log": "^2.2.17",
    "electron-store": "^2.0.0",
    "electron-updater": "^3.1.5",
    "electron-util": "^0.10.1",
    "hls.js": "^0.11.0",
    "normalize.css": "^8.0.0",
    "rambda": "^1.2.6",
    "raw-loader": "^0.5.1",
    "superagent": "^4.0.0-beta.5",
    "svg-country-flags": "^1.2.6",
    "ts-key-enum": "^2.0.0",
    "uuid": "^3.3.2",
    "v-tooltip": "^2.0.0-rc.33",
    "vue": "^2.5.17",
    "vue-apollo": "^3.0.0-beta.25",
    "vue-class-component": "^6.3.2",
    "vue-property-decorator": "^7.2.0",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.16.0",
    "vuex": "^3.0.1",
    "vuex-typescript": "^3.0.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.5",
    "@vue/cli-plugin-typescript": "^3.0.5",
    "@vue/cli-service": "^3.0.5",
    "apollo": "^1.9.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "electron": "^3.0.6",
    "electron-builder": "20.29.0",
    "graphql-tag": "^2.10.0",
    "lint-staged": "^8.0.0",
    "node-sass": "^4.9.4",
    "sass-loader": "^7.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.3",
    "vue-cli-plugin-apollo": "^0.17.3",
    "vue-cli-plugin-electron-builder": "^1.0.0-rc.7",
    "vue-svg-loader": "^0.11.0",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.23.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "background.js",
  "private": true,
  "repository": {
    "type": "github",
    "url": "https://github.com/BeeeQueue/crunch"
  },
  "resolutions": {
    "@types/graphql": "14.0.1",
    "graphql": "14.0.2"
  },
  "scripts": {
    "build": "vue-cli-service electron:build",
    "graphql:types": "yarn apollo codegen:generate --addTypename --schema graphql.schema.json --queries src/**/*.graphql --target typescript --globalTypesFile=src/graphql-types.ts .",
    "graphql:update-schema": "yarn apollo schema:download --endpoint https://graphql.anilist.co graphql.schema.json",
    "lint": "vue-cli-service lint",
    "postinstall": "yarn electron-builder install-app-deps",
    "serve": "vue-cli-service electron:serve"
  }
}
